{% layout 'layout.liquid' %}
{% block content %}
    <div class="container-sm">
        <form action="/objects/{{object.id}}?_method=PUT" method="POST">
            <fieldset>
                <legend>Edit {{ object.name }}</legend>
                <label class="form-label">Name:</label>
                <input 
                    type="text" class="form-control" 
                    name="name" placeholder="What kind of object is it?"
                    required value="{{ object.name }}"
                >
                <label class="form-label">Color:</label>
                <input 
                    type="color" class="form-control" 
                    name="color" placeholder="What color is the object?"
                    required value="{{ object.color }}"
                >
                <label class="form-label">Ready to Eat:</label>
                <input 
                    type="checkbox" class="form-check-control" 
                    name="readyToEat"
                    {% if object.readyToEat %}
                        checked
                    {% endif %}
                >
            </fieldset>
            <input type="submit" class="btn btn-success" value="Edit {{ object.name }}">
            <a href="/objects/{{ object.id }}" class="btn btn-warning">Back</a>
        </form>
    </div>
{% endblock %}