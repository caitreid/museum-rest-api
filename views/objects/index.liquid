{% layout 'layout.liquid' %}
{% block content %}
    <!-- we need to account for two conditions here -->
    <!-- first, if we have objects in our array -->
    <!-- second, if there are no objects in the array -->
    {% if objects.length > 0 %}
        <div class="container-md mt-5">
            <h1>All objects</h1>
            <div class="row">
                {% for object in objects %}
                    <div class="card me-5 mb-3 mt-4 p-4" style="width: 18rem;">
                        <h5 class="py-2">{{object.title}}</h5>
                        {% if object.image %}
                            <img src="{{ object.image }}">
                        {% endif %}
                        <div class="card-body">
                            <p class="card-title">
                                <b>
                                {% if object.onView %}
                                    Currently On View
                                {% else %}
                                    Not Currently on View
                                {% endif %}
                                </b>
                            </p>
                            {% if object.medium %}
                                <p><b>Medium:</b> {{ object.medium }}</p>
                            {% endif %}

                            {% if object.culture %}
                                <p><b>Period:</b> {{ object.culture  }}</p>
                            {% endif %}
                            
                            <a href="/objects/{{object.id}}" class="btn btn-info">View object</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% else %}
        <div class="container-md p-5">
            <h2>No objects belonging to me (yet)...<br> Go create some!</h2>
        </div>
    {% endif %}
{% endblock %}